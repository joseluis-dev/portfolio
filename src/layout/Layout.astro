---
import { NavBar } from '@/components/NavBar.tsx';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
    <meta name="description" content="My portfolio" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
    <div id="app" class="relative h-[200vh] gap-2">

      <NavBar client:load/>

      <aside class="[grid-area:aside1] p-2">
        aside 1
      </aside>

      <main class="[grid-area:main] p-2">
        <slot />
      </main>

      <aside class="[grid-area:aside2] p-2">
        aside 2
      </aside>

      <footer class="[grid-area:footer] p-2">
        footer
      </footer>

    </div>
		
	</body>
</html>

<style>
  #app {
    display: grid;
    grid-template-areas: 
      "nav nav nav"
      "aside1 main aside2"
      "footer footer footer";
    grid-template-columns: 1fr 3fr 1fr;
    grid-template-rows: 85px 1fr auto;
  }
</style>

<style is:global>
  :root {
    --bg-color: #051527;
    --bg-color-light: #0c233de3;
    --bg-hcolor: #05152798;
    --title-color: #ffffff;
    --title2-color: #c9cedf;
    --text-color: #b5b9c4;
    --sky-blue: #04bafc;
    --sky-blue-dark: #3eb4df6e;
    --sky-blue-hover: #00bbff2f;
    --shadow-dark: #030e1b;
    --font-sans: Lato, sans-serif;
    --font-mono: Fira Code;
  }

  body {
    margin: 0;
    background-color: var(--bg-color);
    color: var(--text-color);
    text-wrap: wrap;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>